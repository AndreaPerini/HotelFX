<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HotelController">
   <center>
      <VBox prefHeight="200.0" prefWidth="455.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <DatePicker fx:id="dateInizio" />
                  <DatePicker fx:id="dateFine" />
                  <TextField fx:id="txtCamera" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="478.0">
               <children>
                  <TextField fx:id="txtNome" />
                  <TextField fx:id="txtCognome" />
                  <TextField fx:id="txtNumero" />
                  <Button fx:id="btnInserisciPrivato" mnemonicParsing="false" onAction="#insertPrivato" prefHeight="32.0" prefWidth="103.0" text="Button" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="478.0">
               <children>
                  <TextField fx:id="txtAzienda" />
                  <TextField fx:id="txtIva" />
                  <TextField fx:id="txtIndirizzo" />
                  <Button fx:id="btnInserisciAzienda" mnemonicParsing="false" onAction="#insertAzienda" prefHeight="32.0" prefWidth="103.0" text="Button" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtDate" />
                  <DatePicker fx:id="date" />
                  <Button fx:id="btnDate" mnemonicParsing="false" onAction="#searchDate" text="Button" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
