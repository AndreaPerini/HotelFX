<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HotelController">
   <center>
      <VBox prefHeight="200.0" prefWidth="455.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="inizio" editable="false" prefHeight="25.0" prefWidth="137.0" promptText="Data di inizio" />
                  <TextField fx:id="fine" editable="false" prefHeight="25.0" prefWidth="140.0" promptText="Data finale">
                     <HBox.margin>
                        <Insets left="22.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="numcamera" editable="false" prefHeight="25.0" prefWidth="141.0" promptText="Numero Camera">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <DatePicker fx:id="dateInizio" />
                  <DatePicker fx:id="dateFine" />
                  <TextField fx:id="txtCamera" />
               </children>
            </HBox>
            <Separator prefHeight="22.0" prefWidth="455.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="nome" editable="false" prefHeight="25.0" prefWidth="115.0" promptText="Nome" />
                  <TextField fx:id="cognome" editable="false" prefHeight="25.0" prefWidth="121.0" promptText="Cognome" />
                  <TextField fx:id="telefono" editable="false" prefHeight="25.0" prefWidth="119.0" promptText="Numero di telefono" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="478.0">
               <children>
                  <TextField fx:id="txtNome" />
                  <TextField fx:id="txtCognome" />
                  <TextField fx:id="txtNumero" prefHeight="25.0" prefWidth="144.0" />
                  <Button fx:id="btnInserisciPrivato" mnemonicParsing="false" onAction="#insertPrivato" prefHeight="25.0" prefWidth="135.0" text="Inserisci Privato" />
               </children>
            </HBox>
            <Separator prefHeight="22.0" prefWidth="455.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="azienda" editable="false" prefHeight="25.0" prefWidth="116.0" promptText="Nome Azienda" />
                  <TextField fx:id="iva" editable="false" prefHeight="25.0" prefWidth="117.0" promptText="Partita IVA" />
                  <TextField fx:id="indirizzo" editable="false" prefHeight="25.0" prefWidth="116.0" promptText="Indirizzo Fatturazione" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="478.0">
               <children>
                  <TextField fx:id="txtAzienda" />
                  <TextField fx:id="txtIva" />
                  <TextField fx:id="txtIndirizzo" />
                  <Button fx:id="btnInserisciAzienda" mnemonicParsing="false" onAction="#insertAzienda" prefHeight="25.0" prefWidth="141.0" text="Inserisci Azienda" />
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="ncamera" editable="false" promptText="Numero Camera" />
                  <TextField fx:id="dataCerca" editable="false" promptText="Data interessata" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtDate" />
                  <DatePicker fx:id="date" />
                  <Button fx:id="btnDate" mnemonicParsing="false" onAction="#searchDate" prefHeight="25.0" prefWidth="132.0" text="Cerca data" />
               </children>
            </HBox>
            <HBox prefHeight="37.0" prefWidth="428.0">
               <children>
                  <TextArea fx:id="txtResult" prefHeight="37.0" prefWidth="458.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
